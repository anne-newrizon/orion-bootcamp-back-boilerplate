{
  "name": "orion-api",
  "version": "1.0.0",
  "description": "Boilerplate para as APIs do Orion Bootcamp",
  "author": "",
  "license": "ISC",
  "scripts": {
    "docker-prettier": "npx prettier --write .",
    "start:dev": "npx nodemon -L",
    "build": "npm run lint && npx tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/config/database.ts migration:generate ./src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/config/database.ts migration:run",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/migrations/createTestUsers"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.19",
    "@types/node": "^20.8.6",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.4",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@types/express-validator": "^3.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "mongodb": "^5.9.0",
    "mysql2": "^3.6.2",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17"
  }
}
